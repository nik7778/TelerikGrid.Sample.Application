@model Sample.Application.Entities.Record
<div id="main-div" class="details">
    <h4 style="margin-left:40px;">Details</h4>
    <button class="btn btn-info" style="float:right;margin-top:-30px;margin-right:30px;" id="hideDetails">Hide</button>
    <div class='employee-details'>
        <ul>
            <li><label>Date:</label>@Model.Date</li>
            <li><label>Day:</label>@Model.Day</li>
            <li><label>Time:</label>@Model.Time</li>
            <li><label>Client:</label>@Model.Client</li>
            <li><label>Duration:</label>@Model.Duration</li>
            <li><label>DNB:</label>@Model.DNB</li>
            <li><label>Status:</label>@Model.Status</li>
            <li><label>Memo:</label>@Model.Memo</li>
            <li><label>Staff:</label>@Model.Staff</li>
        </ul>
    </div>
</div>
<script type="text/javascript">
    $("#hideDetails").on("click", function () {
        $('#main-div').css('display', 'none');
    });
</script>